[Unit]
Description=NBA Polymarket Rebalance Monitor
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/NBA_Monitoring
EnvironmentFile=/home/ec2-user/NBA_Monitoring/.env
ExecStart=/home/ec2-user/NBA_Monitoring/venv/bin/python -m scripts.run_rebalance
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=nba-rebalance-monitor

[Install]
WantedBy=multi-user.target
